{
    "manifest_version": 2,
    "name": "Ghoul Extension",
    "version": "1.0.0",
    "description": "Extension for Web Developer ",
    "browser_action": {
        "default_popup": "/popout/popout.html"
    },
    "background": {
        "scripts": [
            "/popout/eventPage.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "/popout/jquery.js",
                "/cloud/cloud.js"
            ],
            "css": [
                "/cloud/cloud.css"
            ],
            "all_frames": true
        }
    ],
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "tabs",
        "activeTab",
        "*://*/*"
    ],
    "icons": {
        "16": "/icons/angular.png",
        "48": "/icons/angular.png",
        "128": "/icons/angular.png"
    }
}